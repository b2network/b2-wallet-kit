{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "react-jsx",
    "outDir": "dist",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": ".(css|scss|less|sass)$"
        }
      }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}